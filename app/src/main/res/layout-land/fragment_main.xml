<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="128dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="32dp"
            android:textStyle="bold"
            android:text="@string/scooter_sharing" />

        <Button
            android:id="@+id/start_ride_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_ride_button" />

        <Button
            android:id="@+id/update_ride_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update_ride_button" />

        <Button
            android:id="@+id/list_rides_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_rides_button" />

    </LinearLayout>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</LinearLayout>